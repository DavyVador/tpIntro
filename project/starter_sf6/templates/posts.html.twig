{% extends 'base.html.twig' %}

{% block title %} Tous les posts{% endblock %}
{% block body %}

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#id</th>
            <th scope="col">Titre</th>
            <th scope="col">Content</th>
            <th scope="col">Date created</th>
            <th scope="col">Enable</th>
            <th scope="col">View</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
        </thead>
        <tbody>
        {%  for post in posts  %}
            <tr>
                <th scope="row">{{ post.id }}</th>
                <td>{{ post.title }}</td>
                <td>{{ post.content }}</td>
                <td>{{ (post.dateCreated).format('d/m/Y') }}</td>
                <td>{{ post.enable}}</td>
                <td><a href="{{ path('app_post_view', {'id' : post.id }) }}" class="text-bg-primary">View</a></td>
                <td><a href="{{ path('app_post_update', {'post' : post.id}) }}" class="text-bg-success">Edit</a></td>
                <td><a href="{{ path('app_post_delete', {'id' : post.id }) }}" class="text-bg-danger">Delete</a></td>
            </tr>
        {%  endfor %}
        </tbody>
    </table>
    <button class="btn btn-primary"><a href="{{ path('app_post_create') }}" class="text-white text-decoration-none">Create Post</a></button>
{% endblock %}